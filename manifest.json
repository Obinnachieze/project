{
  "manifest_version": 3,
  "name": "Global Currency & Job Tracker",
  "version": "1.0",
  "description": "A modern currency converter with integrated job-saving tools.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://api.frankfurter.dev/v1/*",
    "https://www.linkedin.com/jobs/view/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
