{
  "manifest_version": 3,
  "name": "Global Currency Converter",
  "version": "1.0",
  "description": "A modern currency converter with integrated job-saving tools.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://cdn.jsdelivr.net/npm/@fawazahmed0/currency-api@latest/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
